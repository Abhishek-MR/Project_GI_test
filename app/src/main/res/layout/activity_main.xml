<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/separatorColor"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="100dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="@dimen/material_card_edge_margin"
                android:layout_marginRight="@dimen/material_card_edge_margin"
                app:cardBackgroundColor="@color/material_color_white"
                app:cardCornerRadius="@dimen/material_card_corner_radius"
                app:cardElevation="@dimen/cardview_default_elevation"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/material_card_actions_row_padding"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/txt_day_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textColor="@color/material_color_purple_500"
                        android:textSize="@dimen/material_typography_regular_title_text_size"


                        />

                    <TextView
                        android:id="@+id/txt_weather_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_day_name"
                        android:text="Abhishek"
                        android:textColor="@color/material_color_purple_500"
                        android:textSize="@dimen/material_typography_regular_title_text_size"
                        />

                    <TextView
                        android:id="@+id/txt_original_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:text="Not connected to home"
                        android:textColor="@color/material_color_purple_500"
                        android:textSize="@dimen/material_card_supporting_text_text_size"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/txt_temp_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="350"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/material_color_purple_500"
                            android:textSize="@dimen/material_card_title_block_large_title_text_size"
                            />

                        <TextView
                            android:id="@+id/txt_chance_rain"
                            android:layout_width="wrap_content"
                            android:text="seeds"
                            android:layout_height="wrap_content"
                            android:textColor="@color/material_color_purple_500"
                            android:textSize="@dimen/material_card_supporting_text_text_size"
                            />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/image_weather"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/seed"
                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_card_edge_margin"
                android:layout_marginRight="@dimen/material_card_edge_margin"
                app:cardBackgroundColor="@color/material_color_white"
                app:cardCornerRadius="@dimen/material_card_corner_radius"
                app:cardElevation="@dimen/cardview_default_elevation"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/material_card_actions_row_padding"
                >
                <com.tomer.fadingtextview.FadingTextView
                    android:id="@+id/fadingTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_color_purple_500"
                    android:gravity="center"
                    android:textSize="@dimen/material_typography_regular_title_text_size"
                    app:timeout="2000"
                    app:texts="@array/examples" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_card_edge_margin"
                android:layout_marginRight="@dimen/material_card_edge_margin"
                app:cardBackgroundColor="@color/material_color_white"
                app:cardCornerRadius="@dimen/material_card_corner_radius"
                app:cardElevation="@dimen/cardview_default_elevation"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/material_card_actions_row_padding"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home"
                            android:textColor="@color/material_color_deep_purple_400"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/material_color_deep_purple_400"
                            android:layout_height="wrap_content"
                            android:text="100 seeds"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user1"
                            android:id="@+id/user1"
                            android:textColor="@color/material_color_deep_purple_400"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/material_color_deep_purple_400"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user2"
                            android:id="@+id/user2"
                            android:textColor="@color/material_color_deep_purple_400"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/material_color_deep_purple_400"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user3"
                            android:id="@+id/user3"
                            android:textColor="@color/material_color_deep_purple_400"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/material_color_deep_purple_400"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user4"
                            android:id="@+id/user4"
                            android:textColor="@color/material_color_deep_purple_400"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/material_color_deep_purple_400"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_card_edge_margin"
                android:layout_marginRight="@dimen/material_card_edge_margin"
                app:cardBackgroundColor="@color/material_color_green_500"
                app:cardCornerRadius="@dimen/material_card_corner_radius"
                app:cardElevation="@dimen/cardview_default_elevation"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/material_card_actions_row_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coupons"
                        android:textStyle="bold"
                        android:textColor="@color/material_color_white"
                        android:layout_marginBottom="10dp"
                        />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_gravity="bottom"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="30dp"
                android:paddingEnd="60dp"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:paddingStart="60dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>

    </ScrollView>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_margin="10dp"
        android:padding="@dimen/material_bottom_sheet_list_padding_horizontal"
        android:elevation="@dimen/material_bottom_sheet_elevation"
        android:background="@drawable/rounded_corners"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Explore"
                    android:padding="16dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:id="@+id/swipe"
                    android:textColor="@color/material_color_grey_400"
                    android:textSize="@dimen/material_bottom_sheet_title_text_size"/>


            </RelativeLayout>



            <!-- Sheet-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>